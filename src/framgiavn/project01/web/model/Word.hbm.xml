<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="framgiavn.project01.web.model.Word" table="words"
		dynamic-insert="true" dynamic-update="true">
		<id name="word_id" type="java.lang.Integer">
			<column name="word_id" length="20" />
			<generator class="identity" />
		</id>

		<property name="content" type="java.lang.String">
			<column name="content" length="30" />
		</property>

		<many-to-one name="category" class="framgiavn.project01.web.model.Category"
			fetch="select" lazy="false">
			<column name="category_id" not-null="true" />
		</many-to-one>
		
		<set name="word_wordAnswer" table="wordAnswers" inverse="true" lazy="false"
			fetch="select">
			<key>
				<column name="word_id" not-null="true" />
			</key>
			<one-to-many class="framgiavn.project01.web.model.WordAnswer" />
		</set>
		
		<property name="created_at" type="java.util.Date">
			<column name="created_at" length="50" />
		</property>

		<property name="updated_at" type="java.util.Date">
			<column name="updated_at" length="50" />
		</property>
	</class>
</hibernate-mapping>
